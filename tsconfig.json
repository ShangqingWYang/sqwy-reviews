{
  "compilerOptions": {
    /* âœ… Standard Next.js TypeScript setup */
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "incremental": true,

    /* âœ… Needed for Next.js intellisense */
    "plugins": [{ "name": "next" }],

    /* âœ… Enables @ alias imports (e.g. "@/components/Button") */
    "paths": {
      "@/*": ["./src/*"]
    },

    /* âœ… ðŸ”¥ REQUIRED FIX: load React Three Fiber JSX types */
    "types": ["@react-three/fiber"]
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",

    /* âœ… ensures TS loads your custom .d.ts fixes */
    "src",
    "app",
    "src/r3f-types.d.ts",
    ".next/types/**/*.ts"
  ],

  "exclude": ["node_modules"]
}
